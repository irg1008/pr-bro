generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum ExerciseType {
  WEIGHT
  CARDIO
}

enum TargetType {
  REPS
  DURATION
}

model RoutineGroup {
  id          String    @id @default(cuid())
  name        String
  description String?
  isActive    Boolean   @default(false)
  routines    Routine[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Routine {
  id             String            @id @default(cuid())
  name           String
  description    String?
  routineGroupId String
  group          RoutineGroup      @relation(fields: [routineGroupId], references: [id])
  focusedParts   String[] // Array of preferred body parts/categories
  exercises      RoutineExercise[]
  logs           WorkoutLog[]
  order          Int               @default(0)
  isDeload       Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
}

model Exercise {
  id               String            @id @default(cuid())
  name             String
  description      String?
  imageUrl         String?
  category         String? // Made optional as it's not in CSV directly (though could be mapped)
  bodyPart         String?
  equipment        String?
  target           String?
  secondaryMuscles String[]
  instructions     String[]
  type             ExerciseType      @default(WEIGHT)
  // gifId removed as per user request
  routineExercises RoutineExercise[]
  logEntries       WorkoutLogEntry[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model RoutineExercise {
  id                  String     @id @default(cuid())
  routineId           String
  exerciseId          String
  order               Int
  isSuperset          Boolean    @default(false)
  note                String?
  targetSets          String? // e.g. "3" or "3-4"
  targetReps          String? // e.g. "8-12" or "30" (seconds when targetType=DURATION)
  targetType          TargetType @default(REPS) // REPS or DURATION (seconds)
  targetRepsToFailure String? // e.g. "1-2"
  incrementValue      Float? // Amount to add when graduating (kg)
  isActive            Boolean    @default(true)
  routine             Routine    @relation(fields: [routineId], references: [id])
  exercise            Exercise   @relation(fields: [exerciseId], references: [id])

  @@unique([routineId, exerciseId])
}

model WorkoutLog {
  id          String            @id @default(cuid())
  routineId   String
  routine     Routine           @relation(fields: [routineId], references: [id])
  date        DateTime          @default(now())
  finishedAt  DateTime?
  entries     WorkoutLogEntry[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  cycleNumber Int               @default(1)
  isDeload    Boolean           @default(false)
}

model WorkoutLogEntry {
  id           String     @id @default(cuid())
  workoutLogId String
  exerciseId   String
  workoutLog   WorkoutLog @relation(fields: [workoutLogId], references: [id])
  exercise     Exercise   @relation(fields: [exerciseId], references: [id])
  sets         Json // Stores array of { weight: number, reps: number, completed: boolean, type?: "NORMAL" | "WARMUP" | "FAILURE" }
  note         String?
  isSuperset   Boolean    @default(false)
  order        Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
