---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Dumbbell } from "lucide-react";
---

<BaseLayout
	title="404 - Set Failed"
	description="The set you are looking for could not be found."
>
	<div
		class="bg-background relative flex min-h-screen flex-col items-center justify-center overflow-hidden p-4"
	>
		<!-- Background Texture/Gradient -->
		<div
			class="absolute inset-0 bg-radial-[circle_at_center,var(--tw-gradient-stops)] from-muted/20 via-background to-background pointer-events-none"
		>
		</div>

		<div class="relative z-10 flex flex-col items-center text-center">
			<!-- Icon/Graphic -->
			<div class="mb-8 text-muted-foreground/30">
				<Dumbbell className="h-32 w-32 animate-pulse-slow" strokeWidth={1} />
			</div>

			<h1
				class="text-9xl font-black tracking-tighter text-foreground select-none"
			>
				404
			</h1>

			<div class="space-y-2 mt-4 max-w-md">
				<h2 class="text-2xl md:text-3xl font-bold tracking-tight">
					Form Breakdown
				</h2>
				<p class="text-muted-foreground text-lg">
					We couldn't find the page you're looking for. It might have been
					re-racked or doesn't exist.
				</p>
			</div>

			<!-- CTA -->
			<a
				href="/"
				class="mt-8 group relative inline-flex items-center gap-2 overflow-hidden rounded-full bg-primary px-8 py-3 text-primary-foreground font-semibold transition-all hover:scale-105 active:scale-95"
			>
				<span>Return to Rack</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="16"
					height="16"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="transition-transform group-hover:translate-x-1"
				>
					<path d="M5 12h14"></path>
					<path d="m12 5 7 7-7 7"></path>
				</svg>
			</a>
		</div>
	</div>
</BaseLayout>

<style>
	.animate-pulse-slow {
		animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			opacity: 0.3;
		}
		50% {
			opacity: 0.6;
		}
	}
</style>
